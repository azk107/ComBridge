<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".beranda.BerandaFragment">

    <!-- Bagian Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#6AA4F1"
        android:padding="16dp">

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ComBridge"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_medium" />

        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hai, Zainal Ilmi"
            android:textSize="18sp"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/welcomeMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temukan cara berkomunikasi dengan bahasa isyarat bersama ComBridge!"
            android:textSize="14sp"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_medium" />
    </LinearLayout>

    <!-- Bagian Menu -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="1"
        android:padding="20dp"
        android:layout_gravity="center">

        <!-- Tombol Huruf -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp"
            android:layout_gravity="start|center_vertical">

            <!-- Latar Belakang Persegi -->
            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#BDE0FE"
                android:elevation="4dp"
                android:clipToPadding="false">

                <!-- Ikon -->
                <ImageView
                    android:id="@+id/iconHuruf"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_huruf"
                    android:layout_gravity="center" />
            </FrameLayout>

            <!-- Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Huruf"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_medium"/>
        </LinearLayout>


        <!-- Tombol Kata -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp"
            android:layout_gravity="center|center_vertical">

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#BDE0FE"
                android:elevation="4dp"
                android:clipToPadding="false">

                <!-- Ikon -->
                <ImageView
                    android:id="@+id/iconKata"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_kata"
                    android:layout_gravity="center" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kata"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_medium"/>
        </LinearLayout>

        <!-- Tombol Angka -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp"
            android:layout_gravity="center_vertical">

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#BDE0FE"
                android:elevation="4dp"
                android:clipToPadding="false">

                <!-- Ikon -->
                <ImageView
                    android:id="@+id/iconAngka"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_angka"
                    android:layout_gravity="center" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Angka"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_medium"/>
        </LinearLayout>
    </GridLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
