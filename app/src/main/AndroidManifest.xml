<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_app_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ComBridge"
        tools:targetApi="31">
        <activity
            android:name=".kamera.BangunKataActivity"
            android:exported="false" />
        <activity
            android:name=".pengaturan.AboutActivity"
            android:exported="false" />
        <activity
            android:name=".beranda.ImageDisplayActivity"
            android:exported="false" />
        <activity
            android:name=".welcome.StartActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".welcome.WelcomeActivity"
            android:exported="false" />
        <activity
            android:name=".autentikasi.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".autentikasi.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".beranda.DetailKataActivity"
            android:exported="false" />
        <activity
            android:name=".beranda.BerandaFragment"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".kamera.CameraActivity"
            android:exported="true" />
    </application>

</manifest>